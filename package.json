{
  "name": "bio-shelf-monorepo",
  "version": "1.0.0",
  "description": "BioShelf - Lab inventory management system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && rails server",
    "dev:json-server": "cd frontend && npm run json-server",
    "install:all": "npm install && cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && bundle exec rspec",
    "lint:frontend": "cd frontend && npm run lint",
    "format:frontend": "cd frontend && npm run format"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": "Andrew Bootsma <andrew_boots@proton.me>",
  "license": "MIT",
  "workspaces": [
    "frontend"
  ]
}